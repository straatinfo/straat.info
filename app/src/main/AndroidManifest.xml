<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.straatinfo.straatinfo">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
            android:name=".Controllers.App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".Controllers.ReportsActivity"
                android:parentActivityName=".Controllers.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTION"
                android:value=".MainActivity"
            />
        </activity>
        <activity
                android:name=".Controllers.MainActivity"
                android:label="@string/title_activity_main"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".Controllers.RegistrationCreateTeamActivity">
        </activity>
        <activity android:name=".Controllers.EnterCodeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Controllers.RegistrationActivity">
        </activity>
        <activity android:name=".Controllers.InitialActivity">
        </activity>
        <activity android:name=".Controllers.LoginActivity">
        </activity>
    </application>

</manifest>