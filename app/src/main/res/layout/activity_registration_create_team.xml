<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controllers.RegistrationCreateTeamActivity"
        style="@style/parent_container_style"
        android:padding="@dimen/base_padding"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create New Team"
            android:textSize="@dimen/title"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/reg_margin_bottom"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team Name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/login_edit_text_style"
            android:layout_marginBottom="@dimen/reg_margin_bottom"
            android:hint="Enter Team Name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team Email Address" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/login_edit_text_style"
            android:inputType="textEmailAddress"
            android:hint="Enter Team Email Address"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/login_button_style"
            android:layout_marginBottom="@dimen/reg_margin_bottom"
            android:text="SELECT LOGO"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/reg_notes_margin">

            <ImageView android:layout_width="200dp"
                       android:layout_height="200dp"
                       android:layout_centerHorizontal="true"
                       android:background="@drawable/ic_logo"/>

        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/login_button_style"
            android:text="Register"/>
</LinearLayout>