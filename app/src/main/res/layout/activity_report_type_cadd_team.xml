<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controllers.ReportTypeCAddTeamActivity">

    <Button
            android:id="@+id/report_type_c_add_team_next_btn"
            style="@style/login_button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:enabled="false"
            android:onClick="nextButton"
            android:text="@string/next_step"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:id="@+id/report_type_c_add_team_back_btn"
            style="@style/login_button_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:onClick="backButton"
            android:text="@string/back"
            app:layout_constraintBottom_toTopOf="@+id/report_type_c_add_team_next_btn"
            app:layout_constraintEnd_toEndOf="@+id/report_type_c_add_team_next_btn"
            app:layout_constraintStart_toStartOf="@+id/report_type_c_add_team_next_btn" />
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/report_type_c_add_team_back_btn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/report_type_c_team_list_recycler_view"/>
</android.support.constraint.ConstraintLayout>