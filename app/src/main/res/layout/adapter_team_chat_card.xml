<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@mipmap/ic_launcher_round"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/imageView3" android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardElevation="0dp"
            app:cardCornerRadius="30dp"
    >

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher_round"
                android:id="@+id/team_profile_img"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="fitXY"

        />
    </android.support.v7.widget.CardView>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="@+id/imageView3"
            android:id="@+id/team_chat_name" android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView3" android:layout_marginStart="8dp"
            tools:text="Team Chat" android:textColor="@android:color/black" android:textStyle="bold"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chat_preview_txt" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/team_chat_name"
            app:layout_constraintStart_toStartOf="@+id/team_chat_name" android:textSize="12sp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            android:textColor="#333333" tools:text="john_doe77: Hi how are you doing?"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_txt" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/team_chat_name" android:textSize="11sp"
            android:textColor="#333333" tools:text="30/11/2019"/>
    <TextView
            android:text="TextView"
            android:layout_width="16dp"
            android:layout_height="15dp"
            android:id="@+id/new_message_count_txt" app:layout_constraintEnd_toEndOf="@+id/date_txt"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/date_txt"
            app:layout_constraintBottom_toBottomOf="@+id/chat_preview_txt" tools:text="9+" android:textSize="10sp"
            android:background="@drawable/bottom_menu_badge_bg" android:textColor="@color/white"
            android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>