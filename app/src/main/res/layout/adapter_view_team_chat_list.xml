<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="@drawable/team_list_item_shape"
                                             android:layout_marginTop="5dp" android:layout_marginBottom="5dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/team_chat_name" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            tools:text="Main Category text" android:textSize="16sp"
            android:textStyle="bold" android:textColor="@android:color/black"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/ic_logo"
            android:id="@+id/team_chat_img"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/team_chat_name" android:layout_marginBottom="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/team_chat_email" app:layout_constraintStart_toStartOf="@+id/view_report_main_cat_txt"
            app:layout_constraintTop_toBottomOf="@+id/team_chat_name"
            tools:text="team_email@domain.com" android:textColor="@android:color/black" android:textSize="16sp"
            android:layout_marginTop="8dp"
    />
</android.support.constraint.ConstraintLayout>