<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/windowInfoNoPhotoTxt"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/mainCatTxt" app:layout_constraintEnd_toEndOf="@+id/textView3"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/reportPreviewImg"
            app:layout_constraintStart_toStartOf="@+id/reportPreviewImg" android:layout_marginStart="8dp"
            android:text="@string/report_window_info_no_photo" android:background="@color/color_blue_dark"
            android:textColor="@color/white"
            android:textSize="18sp" android:textAlignment="center" android:paddingTop="20dp"/>
    <ImageView
            android:layout_width="106dp"
            android:layout_height="128dp" tools:srcCompat="@drawable/ic_logo"
            android:id="@+id/reportPreviewImg"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="@+id/mainCatTxt" android:contentDescription="Report Preview Image"
            app:srcCompat="@drawable/ic_logo"
            app:layout_constraintEnd_toEndOf="@+id/textView3" android:visibility="invisible"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mainCatTxt"
            tools:text="Main Category Name asdfas" android:textSize="24sp"
            android:breakStrategy="simple"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/reportPreviewImg"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/textView3"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/reportDateTxt"
            tools:text="01/01/2019 00:00"
            android:textSize="20sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mainCatTxt"
            app:layout_constraintStart_toStartOf="@+id/mainCatTxt"
            app:layout_constraintEnd_toEndOf="@+id/mainCatTxt"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/viewReportTxt" app:layout_constraintStart_toStartOf="@+id/reportDateTxt"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/reportDateTxt"
            android:text="@string/report_view_report" android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/reportDateTxt"/>
    <TextView
            android:layout_width="300dp"
            android:layout_height="5dp"
            android:id="@+id/textView3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:id="@+id/textView4" app:layout_constraintTop_toBottomOf="@+id/viewReportTxt"
            app:layout_constraintStart_toStartOf="@+id/viewReportTxt"
            app:layout_constraintEnd_toEndOf="@+id/reportPreviewImg"/>
</android.support.constraint.ConstraintLayout>