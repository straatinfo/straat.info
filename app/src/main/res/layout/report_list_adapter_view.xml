<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainCatTxt" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" tools:text="Main Category text" android:textSize="20sp"
            android:textStyle="bold" android:textColor="@android:color/black"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="0dp" app:srcCompat="@drawable/ic_logo"
            android:id="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/mainCatTxt"
            app:layout_constraintBottom_toBottomOf="@+id/messageNumberTxt" android:scaleType="centerCrop"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dateTxt" app:layout_constraintStart_toStartOf="@+id/mainCatTxt"
            app:layout_constraintTop_toBottomOf="@+id/mainCatTxt"
            tools:text="jan 1, 2019" android:textColor="@android:color/black"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:id="@+id/viewReportTxt" app:layout_constraintStart_toStartOf="@+id/dateTxt"
            app:layout_constraintTop_toBottomOf="@+id/dateTxt"
            tools:text="Bekjik het rapport" android:textColor="@android:color/black"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/messageNumberTxt" tools:text="0"
            app:layout_constraintStart_toStartOf="@+id/viewReportTxt"
            app:layout_constraintTop_toBottomOf="@+id/viewReportTxt" android:layout_marginTop="24dp"
            android:textColor="#2196F3" android:textStyle="bold" android:textSize="19sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13" app:layout_constraintStart_toEndOf="@+id/messageNumberTxt"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/messageNumberTxt" android:textSize="19sp"
            android:textColor="#2196F3" tools:text="Berichten"/>
</android.support.constraint.ConstraintLayout>