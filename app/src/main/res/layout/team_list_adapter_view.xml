<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="@drawable/team_list_item_shape"
                                             android:layout_marginBottom="10dp">

    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp" app:srcCompat="@drawable/ic_logo"
            android:id="@+id/teamListTeamProfileImg"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" android:scaleType="fitCenter"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teamListTeamNameTxt" app:layout_constraintStart_toEndOf="@+id/teamListTeamProfileImg"
            android:layout_marginStart="10dp" app:layout_constraintTop_toTopOf="@+id/teamListTeamProfileImg"
            android:textSize="20sp" android:textColor="@android:color/black" tools:text="John Doe Team"
            android:textStyle="bold"
            android:textAlignment="viewStart"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teamListTeamEmailTxt" app:layout_constraintStart_toStartOf="@+id/teamListTeamNameTxt"
            app:layout_constraintTop_toBottomOf="@+id/teamListTeamNameTxt" android:layout_marginTop="10dp"
            tools:text="johndoeteam@domain.com" android:textColor="@android:color/black"/>
</android.support.constraint.ConstraintLayout>