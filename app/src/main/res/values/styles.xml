<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_blue_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/default_text_size</item>
    </style>

    <style name="parent_container_style">
        <item name="android:background">@color/color_default</item>
    </style>

    <style name="login_edit_text_style">
        <item name="android:background">@drawable/login_edit_text_shape</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom</item>
    </style>

    <style name="login_button_style">
        <item name="android:background">@drawable/default_button_pressed_state</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/base_padding</item>
    </style>

    <style name="registration_button_style">
        <item name="android:background">@drawable/default_button_pressed_state</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/base_padding</item>
    </style>

    <style name="registration_button_cancel_style">
        <item name="android:background">@drawable/default_button_cancel_pressed_state</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/base_padding</item>
    </style>

    <style name="enter_code_button_cancel_style">
        <item name="android:background">@drawable/default_button_cancel_pressed_state</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/base_padding</item>
    </style>

    <style name="default_background_container">
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginTop">@dimen/base_padding</item>
    </style>

    <style name="enter_code_button_ok_style">
        <item name="android:background">@drawable/default_button_ok_pressed_state</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/base_padding</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="report_input_style">
        <item name="android:background">@drawable/create_report_input_box</item>
        <item name="android:textColor">@color/color_blue_dark</item>
        <item name="android:layout_marginTop">@dimen/base_padding</item>
    </style>
    <style name="upload_photo">
        <item name="android:background">@drawable/upload_photo_box</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="bottomMenuSelectionsNumber">
        <item name="android:text">1</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_gravity">right|top</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/bottom_menu_badge_bg</item>
    </style>
</resources>
